{
    "name": "ctv-web-reference-app",
    "version": "1.0.0",
    "description": "Sample app to demonstrate how to integrate true[X]'s CTV Web ad renderer",
    "main": "index.js",
    "public": true,
    "scripts": {
        "clean": "rm -rf ./dist/*",
        "start": "webpack-serve --host 0.0.0.0 --port 8080",
        "build": "npm run clean && webpack",
        "build-firetv": "run-func ./platforms/FireTV/builder buildLauncher",
        "build-ps4": "run-func ./platforms/PS4/builder buildLauncher"
    },
    "devDependencies": {
        "@babel/code-frame": "^7.8.3",
        "@babel/core": "^7.8.3",
        "@babel/plugin-syntax-dynamic-import": "^7.7.4",
        "@babel/plugin-transform-async-to-generator": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.2.0",
        "@babel/preset-env": "^7.4.1",
        "@babel/runtime": "^7.4.1",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.5.3",
        "file-loader": "^6.0.0",
        "html-loader": "^1.1.0",
        "style-loader": "^1.2.1",
        "svg-inline-loader": "^0.8.2",
        "html-webpack-plugin": "^3.2.0",
        "node-sass": "^4.14.0",
        "properties-reader": "^2.0.0",
        "run-func": "^1.0.5",
        "sass-loader": "^8.0.2",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.1.4",
        "webpack-serve": "^1.0.4"
    },
    "dependencies": {
        "@truex/ctv-ad-renderer": ">=0.0.0 <=1.0.0",
        "core-js": "^3.6.4",
        "truex-shared": "https://github.com/socialvibe/truex-shared-js.git#v1.0.63",
        "uuid": "^3.4.0",
        "whatwg-fetch": "^3.0.0"
    }
}
